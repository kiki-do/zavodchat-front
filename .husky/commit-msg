#!/bin/sh

COMMIT_MSG_FILE=$1
MSG=$(cat "$COMMIT_MSG_FILE")

if echo "$MSG" | grep -qE "^Merge"; then
  exit 0
fi

get_emoji() {
  case $1 in
    feat) echo "âœ¨" ;;
    fix) echo "ðŸ›" ;;
    docs) echo "ðŸ“" ;;
    style) echo "ðŸŽ¨" ;;
    refactor) echo "â™»ï¸" ;;
    test) echo "âœ…" ;;
    chore) echo "âš’ï¸" ;;
    build) echo "ðŸ—" ;;
    ci) echo "ðŸ‘·" ;;  
    revert) echo "âª" ;;
    perf) echo "âš¡ï¸" ;;
    *) echo "" ;;
  esac
}

TYPE=$(echo "$MSG" | sed -E 's/^([a-zA-Z]+)(\([^)]+\))?:.*/\1/')
EMOJI=$(get_emoji "$TYPE")

npx commitlint --edit "$1"
RESULT=$?

if [ $RESULT -ne 0 ]; then
  exit $RESULT
fi

if [ -n "$EMOJI" ]; then
  if ! echo "$MSG" | grep -qE "^$EMOJI "; then
    echo "$EMOJI $MSG" > "$COMMIT_MSG_FILE"
  fi
fi 